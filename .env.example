# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Immich Configuration
IMMICH_API_URL=http://your-immich-instance:2283/api
IMMICH_API_KEY=your_immich_api_key_here

# User Access Control
ALLOWED_USER_IDS=123456789,987654321

# Optional: Telegram Bot API (for handling files >20MB)
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Optional: Local Telegram Bot API URL
# When using the local telegram-bot-api service, set this to:
TELEGRAM_API_URL=http://telegram-bot-api:8081

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Bot Name
BOT_NAME=Telegram to Immich Bot
